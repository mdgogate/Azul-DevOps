<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/create_font"
    android:orientation="vertical">

  <LinearLayout
      android:id="@+id/grid_adapter"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center|center_vertical"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="8dp"
      android:layout_marginRight="15dp"
      android:layout_marginBottom="2dp"
      android:background="@drawable/top_back_shadow"
      android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0.1">

      <ImageView
          android:id="@+id/imageViewCards"
          android:layout_width="26dp"
          android:layout_height="26.42dp"
          android:layout_alignParentLeft="true"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="3dp"
          android:src="@drawable/phos_mastercard_logo" />

      <RelativeLayout
          android:id="@+id/layoutLocation_ref_no"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_toRightOf="@+id/imageViewCards">

        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/vag_bold"
            android:textColor="@color/font_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/vag_bold"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:textColor="@color/font_hint"
            android:textSize="12sp" />


      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/layoutLocation_Price"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/layoutLocation_ref_no"
          android:layout_marginStart="3dp"
          android:layout_toRightOf="@+id/imageViewCards">


        <TextView
            android:id="@+id/tvApprovedNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Aprobada 003686"
            android:textColor="@color/gradient_button_right"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/vag_bold"
            android:gravity="center_vertical"
            android:text="RD$ 1,300,293.64"
            android:textColor="@color/blue_3"
            android:textSize="16sp" />


      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/layoutLocationTrnType"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/layoutLocation_Price"
          android:layout_marginStart="3dp"
          android:layout_marginTop="3dp"
          android:layout_toRightOf="@+id/imageViewCards">


        <TextView
            android:id="@+id/tvTrnTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat_medium"
            android:text="Tipo de transacción"
            android:textColor="@color/font_hint"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tvTrnType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:text="Devolución"
            android:textColor="@color/font_hint"
            android:textSize="12sp" />


      </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/igMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:src="@drawable/more_info_selector" />
  </LinearLayout>

</LinearLayout>