<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0057B8"
    android:orientation="vertical"
    tools:context=".activities.payment.LinkSharingActivity">

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/linkLayout"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/linkLogo"
            android:layout_width="64dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="139dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/link_share_logo" />

        <TextView
            android:id="@+id/tvLinkTitle"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linkLogo"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="53dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="52dp"
            android:fontFamily="@font/vag_bold"
            android:gravity="center_horizontal"
            android:text="¡Link de pago\n generado!"
            android:textColor="#E9F4FA"
            android:textSize="32sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/linkInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLinkTitle"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLink"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/vag_light"
                android:gravity="center_horizontal"
                android:text="https://pagos.azul.com.do/ba780bd0"
                android:textColor="@color/white_bg"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgCopyLink"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tvLink"
                android:src="@drawable/link_copy" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linkInfo"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSalir"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/link_button_background"
                android:fontFamily="@font/vag_bold"
                android:text="Salir"
                android:textAllCaps="false"
                android:textColor="@color/white_bg"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNextSale"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/link_button_background"
                android:fontFamily="@font/vag_bold"
                android:text="Próxima venta"
                android:textAllCaps="false"
                android:textColor="@color/white_bg"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>