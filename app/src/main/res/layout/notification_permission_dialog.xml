<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/alert_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textMsg"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/vag_bold"
        android:gravity="center_horizontal"
        android:text="¿Permitir que APP AZUL envíe notificaciones?"
        android:textColor="@color/aert_light_black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMsg"
        android:layout_marginStart="51dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="22dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btnNo"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/vag_light"
            android:gravity="center_vertical|center_horizontal"
            android:text="No permitir"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#2C3B89"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btnYes"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/btnNo"
            android:layout_weight="1"
            android:fontFamily="@font/vag_light"
            android:gravity="center_horizontal|center_vertical"
            android:text="permitir"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#2C3B89"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>