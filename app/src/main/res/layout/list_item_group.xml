<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/childView"
    android:background="@color/white">

        <TextView
            android:id="@+id/tvRealAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="191 67703161935"
            android:textColor="@color/blue_2"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/vag_bold"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Auto Rental RAM"
            android:textColor="@color/font_hint"
            android:layout_below="@+id/tvRealAmount"
            android:fontFamily="@font/vag_light"
            android:textSize="16sp"/>

        <View
            android:id="@+id/lineDesign"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvItem"
            android:background="@color/line_style"/>

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:button="@null"
            android:background="@drawable/radio_selector"
            android:clickable="false"
            android:textOff=""
            android:textOn=""
            android:text=""
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>


</RelativeLayout>