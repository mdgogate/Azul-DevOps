<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/create_font"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainShadowItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/transaction_list_item_background"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="14dp">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/tvPaymentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/vag_bold"
                android:gravity="center_vertical"
                android:text="04/06/2021"
                android:textColor="@color/font_hint"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tvLinkId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPaymentDate"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Link ID: c2ac04e7"
                android:textColor="@color/font_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLinkId"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/vag_bold"
                android:gravity="center_vertical"
                android:text="Gabriel Soares"
                android:textColor="@color/slider_heading"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:layout_weight="0.3">

            <LinearLayout
                android:id="@+id/layoutmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutmoreInside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPaymentAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/vag_bold"
                        android:text="RD$ 400.00"
                        android:textColor="@color/blue_3"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/imgMoreButton"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.8"
                        android:src="@drawable/more_info_selector" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTransactionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutmore"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/authorization_competed"
                    android:textColor="@color/font_hint"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutmore"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Procesado -"
                    android:textColor="@color/blue_3"
                    android:textSize="11.5sp" />

                <TextView
                    android:id="@+id/tvApprovalNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l2"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text=" Aprobada OK4667"
                    android:textColor="@color/date_border_color"
                    android:textSize="11.5sp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>