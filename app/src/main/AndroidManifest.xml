<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdp.appazul">

  <permission android:name="com.sdp.appazul.android.fileprovider.READ"/>

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

  <queries>
    <intent>
      <action android:name="android.intent.action.VIEW"/>
      <category android:name="android.intent.category.BROWSABLE"/>
      <data android:mimeType="application/pdf"/>
    </intent>
  </queries>
  <application
      android:name=".globals.AzulApplication"
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:networkSecurityConfig="@xml/network_security_config"
      android:requestLegacyExternalStorage="true"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme.Launcher">
    <activity android:name=".activities.transactions.ResendPaymentLink"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.transactions.PaymentLinkDetails"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.transactions.PaymentLinkTransactions"
        android:screenOrientation="portrait"/>
    <provider android:name="androidx.core.content.FileProvider"
        android:authorities="${applicationId}.provider"
        android:exported="false"
        android:grantUriPermissions="true">
      <meta-data android:name="android.support.FILE_PROVIDER_PATHS"
          android:resource="@xml/provider_paths" />
    </provider>

    <activity android:name=".activities.payment.QuickLinkShareActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.payment.QuickPayValidationActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.payment.QuickPayConfirmActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.payment.QuickSetPaymentActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.notifications.PushNotificationSettings"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.payment.LinkSharingActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.payment.PaymentDataValidateActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.home.QrCodeBeforeLogin"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.payment.PaymentConfirmActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.payment.SetPaymentInfoActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.transactions.SettledTransactionsQuery"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.dashboard.QrCode"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.transactions.QrTransactions"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.registration.UserRegisterActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.dashboard.DashBoardActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.registration.PinSetActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.menuitems.WebActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.home.MainMenuActivity"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.dashboard.SplashScreenActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".activities.menuitems.AccessData"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.menuitems.MyBusiness"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.menuitems.MyInfo"
        android:screenOrientation="portrait"/>
    <activity android:name=".activities.menuitems.MyProfile"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activities.menuitems.UnitsLocation"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activities.registration.PinLoginActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activities.menuitems.UnitLocation"
        android:screenOrientation="portrait"/>
    <service
        android:name=".messaging.FirebaseMessaging"
        android:exported="false">
      <intent-filter>
        <action android:name="com.google.firebase.MESSAGING_EVENT"/>
      </intent-filter>
    </service>
    <meta-data android:name="com.google.firebase.messaging.default_notification_icon"
        android:resource="@drawable/ic_logo"/>
  </application>

</manifest>